import NodeJSIcon from '../icons/techIcons/NodeJS.astro';
import TailwindIcon from '../icons/techIcons/Tailwind.astro';
import CSharpIcon from '../icons/techIcons/CSharp.astro';
import ExpressIcon from '../icons/techIcons/Express.astro';
import MySQLIcon from '../icons/techIcons/MySQL.astro';
import HTMLIcon from '../icons/techIcons/HTML.astro';
