---
import NodeJSIcon from '../icons/techIcons/NodeJS.astro';
import TailwindIcon from '../icons/techIcons/Tailwind.astro';
import CSharpIcon from '../icons/techIcons/CSharp.astro';
import ExpressIcon from '../icons/techIcons/Express.astro';
import MySQLIcon from '../icons/techIcons/MySQL.astro';
import HTMLIcon from '../icons/techIcons/HTML.astro';
import CSSIcon from '../icons/techIcons/CSS.astro';
import JavaScriptIcon from '../icons/techIcons/JavaScript.astro';
import GitHubIcon from '@/icons/techIcons/GitHub.astro';
import LinkButton from './LinkButton.astro';
import WebIcon from '@/icons/Web.astro';
import MSSQLIcon from '@/icons/techIcons/MSSQL.astro';
const TAGS = {
  NodeJS: {
    name: 'Node.js',
    class: 'bg-black text-white',
    icon: NodeJSIcon,
  },
  Tailwind: {
    name: 'Tailwind',
    class: 'bg-black text-white',
    icon: TailwindIcon,
  },
  CSharp: {
    name: 'C#',
    class: 'bg-black text-white',
    icon: CSharpIcon,
  },
  Express: {
    name: 'Express',
    class: 'bg-black text-white',
    icon: ExpressIcon,
  },
  MySQL: {
    name: 'MySQL',
    class: 'bg-black text-white',
    icon: MySQLIcon,
  },
  HTML: {
    name: 'HTML',
    class: 'bg-black text-white',
    icon: HTMLIcon,
  },
  CSS: {
    name: 'CSS',
    class: 'bg-black text-white',
    icon: CSSIcon,
  },
  JavaScript: {
    name: 'JavaScript',
    class: 'bg-black text-white',
    icon: JavaScriptIcon,
  },
  GitHub: {
    name: 'GitHub',
    class: 'bg-black text-white',
    icon: GitHubIcon,
  },
  MSSQL: {
    name: 'MS SQL',
    class: 'bg-black text-white',
    icon: MSSQLIcon,
  },
};
const PROJECTS = [
  {
    title: 'Funko shop',
    description:
      'Tienda virtual de funkos creada con NodeJs-Express para las operaciones CRUD del servidor-base de datos, proyecto con carrito de compras, paginación y autenticación',
    link: 'https://fullstackproject-backend.vercel.app/',
    github: 'https://github.com/Emmanuel-Valdez/fullstackproject-backend',
    image: '/projects/funko_shopWeb.webp',
    tags: [TAGS.NodeJS, TAGS.Express, TAGS.MySQL, TAGS.GitHub],
  },
  {
    title: 'Proyecto final C# QUARK Academy',
    description: 'Calculadora de costos de tienda de ropa. C# utilizando windows forms, incluye un historial de cotizacion, restricciones de stock y manejo de errores',
    link: '',
    github: 'https://github.com/Emmanuel-Valdez/ProyectoCQuarq',
    image: '/projects/CotizadorTiendaRopa.webp',
    tags: [TAGS.CSharp, TAGS.GitHub],
  },
];
---
<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt=""
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg ">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4 " />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400 ">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github} >
                  <GitHubIcon class="size-5" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <WebIcon class="size-5" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
