import JavaScriptIcon from '../icons/techIcons/JavaScript.astro'
import GitHubIcon from '@/icons/techIcons/GitHub.astro';
import LinkButton from './LinkButton.astro';
import WebIcon from '@/icons/Web.astro';
import MSSQLIcon from '@/icons/techIcons/MSSQL.astro'

const TAGS = {
  NodeJS: {
    name: 'Node.js',
    class: 'bg-black text-white',
    icon: NodeJSIcon,
  },
  Tailwind: {
    name: 'Tailwind',
    class: 'bg-black text-white',
    icon: TailwindIcon,
  },
  CSharp: {
    name: 'C#',
    class: 'bg-black text-white',
    icon: CSharpIcon,
  },
  Express: {
    name: 'Express',
    class: 'bg-black text-white',
    icon: ExpressIcon,
  },
  MySQL: {
    name: 'MySQL',
    class: 'bg-black text-white',
    icon: MySQLIcon,
  },
  HTML: {
    name: 'HTML',
    class: 'bg-black text-white',
    icon: HTMLIcon,
  },
  CSS: {
    name: 'CSS',
    class: 'bg-black text-white',
    icon: CSSIcon,
  },
  JavaScript:{
    name:'JavaScript',
    class: 'bg-black text-white',
    icon: JavaScriptIcon,
  },
  GitHub:{
    name:'GitHub',
    class: 'bg-black text-white',
    icon: GitHubIcon,
  },
  MSSQL:{
    name:'MS SQL',
    class: 'bg-black text-white',
    icon: MSSQLIcon,
  },
};
const PROJECTS = [
  {
    title: 'Funko shop',
    description:
      'una tienda virtual de funkos creado con NodeJs-Express para las operaciones CRUD del server-database asñdkfnañsnfañwehfnqoñwehfnqwñoeif hnqwoñifeh qwñofrihnw qeorfihnqweoti nq3weotn wqeiothn wqoeihtnqñweoi htnqw3eoñ thqwero hqweotfhnqweñoi thnqweñot qnwñot hqnweñoithn qewñoi hn',
    link: 'https://fullstackproject-backend.vercel.app/',
    github: 'https://github.com/Emmanuel-Valdez/fullstackproject-backend',
    image: '/projects/funko_shopWeb.webp',
    tags: [TAGS.HTML, TAGS.CSS,TAGS.JavaScript, TAGS.NodeJS, TAGS.Express, TAGS.MySQL, TAGS.GitHub],
  },{
    title: 'Project2',
    description:
    'Calculadora de costos de produccion de un proceso random',
    link:'',
    github:'',
    image: '/projects/project2.png',
    tags: [TAGS.CSharp, TAGS.MSSQL]

  },
];
---
<section class="flex flex-col gap-y-16">
{
  PROJECTS.map(({ title, description, tags, image,link, github }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-4 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-sm ${tag.class} py-1 px-2 border border-white/10`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
      <footer class="flex gap-x-4 justify-end mt-4">
        {github && (
        <LinkButton href={github}>
        <GitHubIcon class="size-6 mr-2"/>
         Ver código fuente
        </LinkButton>
        )}
        <LinkButton href={link}>
        <WebIcon class="size-6 mr-2"/>
        Ir al sitio web
        </LinkButton>

      </footer>
    </article>
  ))
}
</section>